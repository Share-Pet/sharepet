{
  "version": 2,
  "builds": [
    { "src": "backend/app.py", "use": "@vercel/python" },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist", "buildCommand": "npm run build" }
    }
  ],
  "routes": [
    { "src": "^/api/(.*)$", "dest": "backend/app.py" },
    { "src": "^/assets/(.*)$", "dest": "frontend/assets/$1" },
    { "src": "^(?!/api/).*", "dest": "frontend/index.html" }
  ]
}