{
  "version": 2,
  "builds": [
    { "src": "api.py", "use": "@vercel/python" },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build", "buildCommand": "CI='' npm run build" }
    }
  ],
  "functions": {
    "api.py": {
      "runtime": "python3.11",
      "includeFiles": "backend/**"
    }
  },
  "routes": [
    { "src": "^/api/(.*)$", "dest": "app.py" },
    { "handle": "filesystem" },
    { "src": ".*", "dest": "index.html" }
  ]
}
