{
  "version": 2,
  "builds": [
    { "src": "api.py", "use": "@vercel/python" },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build", "buildCommand": "CI='' npm run build" }
    }
  ],
  "routes": [
    { "src": "^/api/(.*)$", "dest": "api.py" },
    { "handle": "filesystem" },
    { "src": ".*", "dest": "/index.html" }
  ]
}
